@model WebIamge.Models.Manage

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Edit", "Manage", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Image)
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-uppercase text-danger">Cập nhật ảnh</strong>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "Manage")" class="btn btn-sm btn-success">
                        <i class="fa-solid fa-arrow-left-long"></i>Quay về danh sách
                    </a>
                    <button type="submit" class="btn btn-sm btn-success">
                        <i class="fa-solid fa-floppy-disk"></i> Lưu[Cập nhật]
                    </button>
                </div>
            </div>
        </div>
        <div class="card-footer p-3">
            <div class="form-group">
                <label>Tên hình ảnh</label>
                @Html.EditorFor(model => model.NameImage, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameImage, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Hình ảnh</label>
                <input type="file" name="img" class="form-control" />
            </div>

            <div class="form-group">
                <label>Trạng thái</label>
                @Html.DropDownListFor(model => model.Status, new[] {
                    new SelectListItem { Text="Ẩn",Value="2" },
                    new SelectListItem { Text="Hiển thị",Value="1" } }, new { @class = "form-control" })


                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}